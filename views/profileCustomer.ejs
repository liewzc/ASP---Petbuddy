<!DOCTYPE html>
<html>
<head>
  <title>Customer Profile</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
    <%- include('partials/header') %>

  <% if (profile) { %>
    <!-- Display the profile data after form submission -->
    <h1>Customer Profile</h1>
    <p><strong>Full Name:</strong> <%= profile.fullName %></p>
    <p><strong>Contact Number:</strong> <%= profile.contactNumber %></p>
    <p><strong>Email:</strong> <%= profile.email %></p>
    <p><strong>Address:</strong> <%= profile.address %></p>
    <p><strong>Emergency Contact:</strong> <%= profile.emergencyContact %></p>
    <p><strong>Pet Name:</strong> <%= profile.petName %></p>
    <p><strong>Pet Breed:</strong> <%= profile.petBreed %></p>
    <p><strong>Pet Age:</strong> <%= profile.petAge %></p>
    <p><strong>Pet Weight:</strong> <%= profile.petWeight %></p>
    <p><strong>Pet Health:</strong> <%= profile.petHealth %></p>
    <p><strong>Pet Diet:</strong> <%= profile.petDiet %></p>
    <p><strong>Pet Allergies:</strong> <%= profile.petAllergies %></p>
    <p><strong>Pet Behavior:</strong> <%= profile.petBehavior %></p>
    <p><strong>Service Type:</strong> <%= profile.serviceType %></p>
    <p><strong>Service Frequency:</strong> <%= profile.serviceFrequency %></p>
    <p><strong>Service Time:</strong> <%= profile.serviceTime %></p>
    <p><strong>Special Requirements:</strong> <%= profile.specialRequirements %></p>
    <p><strong>Additional Notes:</strong> <%= profile.additionalNotes %></p>
    <% if (profile.petPhoto) { %>
      <p><strong>Pet Photo:</strong> <img src="/uploads/<%= profile.petPhoto %>" alt="Pet Photo" style="max-width: 200px;"></p>
    <% } %>

    <!-- Display the Edit and Logout buttons -->
    <form action="/edit-profile" method="get">
      <button type="submit">Edit Profile</button>
    </form>
    <form action="/logout" method="post">
      <button type="submit">Log Out</button>
    </form>

  <% } else { %>
    <!-- Display the form to input profile data if not submitted -->
    <h1>Profile</h1>
    <form action="/profile" method="post" enctype="multipart/form-data">

    <h3>Customer Information</h3>        
      <label for="fullName">Full Name:</label>
      <input type="text" id="fullName" name="fullName" required><br>

      <label for="contactNumber">Contact Number:</label>
      <input type="text" id="contactNumber" name="contactNumber" required><br>

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required><br>

      <label for="address">Address:</label>
      <input type="text" id="address" name="address" required><br>

      <label for="emergencyContact">Emergency Contact:</label>
      <input type="text" id="emergencyContact" name="emergencyContact" required><br>

    <h3>Pet Information</h3>  
      <label for="petPhoto">Pet Photo:</label>
      <input type="file" id="petPhoto" name="petPhoto"><br>

      <label for="petName">Pet Name:</label>
      <input type="text" id="petName" name="petName" required><br>

      <label for="petBreed">Pet Breed:</label>
      <input type="text" id="petBreed" name="petBreed" required><br>

      <label for="petAge">Pet Age:</label>
      <input type="text" id="petAge" name="petAge" required><br>

      <label for="petWeight">Pet Weight:</label>
      <input type="text" id="petWeight" name="petWeight" required><br>

      <label for="petHealth">Pet Health:</label>
      <input type="text" id="petHealth" name="petHealth" required><br>

      <label for="petDiet">Pet Diet:</label>
      <input type="text" id="petDiet" name="petDiet" required><br>

      <label for="petAllergies">Pet Allergies:</label>
      <input type="text" id="petAllergies" name="petAllergies" required><br>

      <label for="petBehavior">Pet Behavior:</label>
      <input type="text" id="petBehavior" name="petBehavior" required><br>

    <h3>Service Requirement</h3>  
      <label for="serviceType">Service Type:</label>
      <input type="text" id="serviceType" name="serviceType" required><br>

      <label for="serviceFrequency">Service Frequency:</label>
      <input type="text" id="serviceFrequency" name="serviceFrequency" required><br>

      <label for="serviceTime">Service Time:</label>
      <input type="text" id="serviceTime" name="serviceTime" required><br>

      <label for="specialRequirements">Special Requirements:</label>
      <input type="text" id="specialRequirements" name="specialRequirements" required><br>

      <label for="additionalNotes">Additional Notes:</label>
      <textarea id="additionalNotes" name="additionalNotes" required></textarea><br>



      <button type="submit">Submit</button>
    </form>
  <% } %>

    <!-- Footer -->
    <%- include('partials/footer') %>
</body>
</html>
