<!DOCTYPE html>
<html>
  <head>
    <title>Customer Profile</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body id="customer-profile-page">
    <%- include('partials/header') %>

    <div class="container mt-4">
      <% if (profile) { %>
        <div class="row">
          <!-- Customer Information -->
          <div class="col-md-6">
            <div class="profile-card">
              <div class="profile-header">
                <h2>Customer Information</h2>
              </div>
              <div class="profile-info">
                <p><strong>Full Name:</strong> <%= profile.fullName %></p>
                <p><strong>Contact Number:</strong> <%= profile.contactNumber %></p>
                <p><strong>Address:</strong> <%= profile.address %></p>
                <p><strong>Emergency Contact:</strong> <%= profile.emergencyContact %></p>
              </div>

            </div>
          </div>

          <!-- Pet Information -->
          <div class="col-md-6">
            <div class="profile-card">
              <div class="profile-header">
                <h2>Pet Information</h2>
              </div>
              <div class="profile-info">
                <% if (profile.petPhoto) { %>
                  <img src="/uploads/<%= profile.petPhoto %>" alt="Pet Photo" class="pet-photo">
                <% } %>
                <p><strong>Pet Name:</strong> <%= profile.petName %></p>
                <p><strong>Pet Breed:</strong> <%= profile.petBreed %></p>
                <p><strong>Pet Age:</strong> <%= profile.petAge %></p>
                <p><strong>Pet Weight:</strong> <%= profile.petWeight %></p>
                <p><strong>Pet Health:</strong> <%= profile.petHealth %></p>
                <p><strong>Pet Diet:</strong> <%= profile.petDiet %></p>
                <p><strong>Pet Allergies:</strong> <%= profile.petAllergies %></p>
                <p><strong>Service Frequency:</strong> <%= profile.serviceFrequency %></p>
                <p><strong>Special Requirements:</strong> <%= profile.specialRequirements %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-md-8">
            <div class="button-group">
              <form action="/edit-profile" method="get">
                <button type="submit" class="btn btn-primary btn-custom">Edit Profile</button>
              </form>
              <form action="/logout" method="post">
                <button type="submit" class="btn btn-danger btn-custom">Log Out</button>
              </form>
            </div>
          </div>
        </div>

      <% } else { %>
        <div class="row">
          <div class="col-md-8">
            <div class="profile-card">
              <div class="profile-info">
                <h1><center>Create Your Profile</center></h1>
                <form action="/profile" method="post" enctype="multipart/form-data">
                  <h3>Customer Information</h3>        
                  <div class="form-group">
                    <label for="fullName" class="form-label">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="contactNumber" class="form-label">Contact Number:</label>
                    <input type="text" id="contactNumber" name="contactNumber" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" id="address" name="address" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="emergencyContact" class="form-label">Emergency Contact:</label>
                    <input type="text" id="emergencyContact" name="emergencyContact" class="form-control" required>
                  </div>

                  <h3>Pet Information</h3>    
                  <div class="form-group">
                    <label for="petPhoto" class="form-label">Pet Photo:</label>
                    <input type="file" id="petPhoto" name="petPhoto" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="petName" class="form-label">Pet Name:</label>
                    <input type="text" id="petName" name="petName" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="petBreed" class="form-label">Pet Breed:</label>
                    <input type="text" id="petBreed" name="petBreed" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="petAge" class="form-label">Pet Age:</label>
                    <input type="number" id="petAge" name="petAge" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="petWeight" class="form-label">Pet Weight:</label>
                    <input type="number" step="0.1" id="petWeight" name="petWeight" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="petHealth" class="form-label">Pet Health:</label>
                    <textarea id="petHealth" name="petHealth" class="form-control form-textarea" required></textarea>
                  </div>
                  <div class="form-group">
                    <label for="petDiet" class="form-label">Pet Diet:</label>
                    <textarea id="petDiet" name="petDiet" class="form-control form-textarea" required></textarea>
                  </div>
                  <div class="form-group">
                    <label for="petAllergies" class="form-label">Pet Allergies:</label>
                    <textarea id="petAllergies" name="petAllergies" class="form-control form-textarea" required></textarea>
                  </div>
                  <div class="form-group">
                    <label for="serviceFrequency" class="form-label">Service Frequency:</label>
                    <input type="text" id="serviceFrequency" name="serviceFrequency" class="form-control" required>

                  </div>
                  <div class="form-group">
                    <label for="specialRequirements" class="form-label">Special Requirements:</label>
                    <textarea id="specialRequirements" name="specialRequirements" class="form-control form-textarea" required></textarea>
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-custom">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
